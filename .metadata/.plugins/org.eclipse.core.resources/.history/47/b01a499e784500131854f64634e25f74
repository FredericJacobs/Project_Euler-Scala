object Problem2 {
  def fib(x: Long, y: Long): Stream[Long] = x #:: fib(y, x + y)
                                                  //> fib: (x: Long, y: Long)Stream[Long]
	def fibEvenMembersSmallerThan (n : Int) = {
		fib(1,2).takeWhile(x => x <= n).filter(_ % 2 == 0)
	}                                         //> fibEvenMembersSmallerThan: (n: Int)scala.collection.immutable.Stream[Long]
	
	fibEvenMembersSmallerThan(4000000)        //> res0: scala.collection.immutable.Stream[Long] = Stream(2, ?)
	
}