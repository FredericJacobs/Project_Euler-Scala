object Problem2 {
  def fib: Stream[Long] = {
    def tail(h: Long, n: Long): Stream[Long] = h #:: tail(n, h + n)
    tail(0, 1)
	}                                         //> fib: => Stream[Long]
	
	def makeFibListUntil(n: Int) = {
		def addFib = fib(i++)
	}                                         //> makeFibListUntil: (n: Int)scala.collection.immutable.Stream[Long]
	
	def fibEvenMembersSmallerThan(n: Int) = {
		makeFibListUntil(n).filter(_ % 2 == 0)
	}                                         //> fibEvenMembersSmallerThan: (n: Int)scala.collection.immutable.Stream[Long]
	
	fibEvenMembersSmallerThan(4000000)        //> res0: scala.collection.immutable.Stream[Long] = Stream(0, ?)
	
}