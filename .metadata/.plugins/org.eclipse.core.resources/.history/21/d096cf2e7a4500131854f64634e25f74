object Problem2 {
  def fib(x: Long, y: Long): Stream[Long] = x #:: fib(y, x + y)
                                                  //> fib: (x: Long, y: Long)Stream[Long]
	def sumOfFibEvenMembersSmallerThan (n : Int) = {
		fib(1,2).takeWhile(x => x <= n)
	}                                         //> sumOfFibEvenMembersSmallerThan: (n: Int)scala.collection.immutable.Stream[Lo
                                                  //| ng]
	
	sumOfFibEvenMembersSmallerThan(4000000)   //> res0: scala.collection.immutable.Stream[Long] = Stream(1, ?)
	
}