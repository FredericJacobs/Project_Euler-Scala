object Problem2 {
  def fib(x: Long, y: Long): Stream[Long] = x #:: fib(y, x + y)
                                                  //> fib: (x: Long, y: Long)Stream[Long]
	def fibEvenMembersSmallerThan (n : Int) = {
		fib(1,2).takeWhile(x => x <= n).filter(_ % 2 == 0).sum
	}                                         //> fibEvenMembersSmallerThan: (n: Int)Long
	
	fibEvenMembersSmallerThan(4000000)        //> res0: Long = 4613732
	
}