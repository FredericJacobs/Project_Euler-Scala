object Problem2 {
  def fib: Stream[Long] = {
    def tail(h: Long, n: Long): Stream[Long] = h #:: tail(n, h + n)
    tail(0, 1)
	}                                         //> fib: => Stream[Long]
	
	def fibEvenMembersSmallerThan (n : Int) = {
		fib(1,2)
	}                                         //> fibEvenMembersSmallerThan: (n: Int)Unit
	
	fibEvenMembersSmallerThan(4000000)
	
}